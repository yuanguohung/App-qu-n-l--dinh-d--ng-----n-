{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",        // Thêm dòng này để paths hoạt động
    "paths": {
      "@/*": ["./app/*"]    // Cho đúng theo project Expo Router chuẩn
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
